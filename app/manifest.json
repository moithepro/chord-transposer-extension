{
    "manifest_version": 3,
    "name": "Chord Transposer",
    "version": "1.0.0",
    "description": "An extension that allows you to transpose chords.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon.png",
            "48": "images/icon.png",
            "128": "images/icon.png"
        }
    },
    "author": "Domenico Gemoli",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "scripts/content.js"
            ],
            "css": [
                "styles/content.css"
            ]
        }
    ],
    "permissions": [
        "activeTab"
    ],
    "icons": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "homepage_url": "https://github.com/moithepro/Chord-Transposer-Extension",
    "offline_enabled": true
}